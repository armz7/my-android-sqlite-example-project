<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="preferExternal"
    package="com.my_company.app_template"
    android:versionCode="4"
    android:versionName="1.02" >

    <!-- Permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <!-- SDK version -->
    <uses-sdk android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />
    
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >

        <!-- Activities -->
        <activity
            android:label="@string/app_name"
            android:name="SplashScreen" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:clearTaskOnLaunch="true"
            android:label="Music List"
            android:name=".Music_List" >
        </activity>
        <activity
            android:label="Music Info Entry"
            android:name=".AddEditMusic" >
        </activity>
        <activity
            android:label=" "
            android:name=".InfoView"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:label="@string/set_preferences"
            android:name=".AppPreferences" >
        </activity>
        <activity
            android:label="Sorting Preferences"
            android:name=".EditSortPreferences" >
        </activity>
        <activity
            android:label="Application Preferences"
            android:name=".EditAppPreferences" >
        </activity>
    </application>

</manifest>